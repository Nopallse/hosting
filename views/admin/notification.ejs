<%- include("../layout/navbar.ejs") %>
<%- include("../layout/sidebar_user.ejs") %>

<!-- Content -->
<div class="w-full pt-10 px-4 sm:px-6 md:px-8 lg:ps-72">
  <!-- Card Section -->
  <div class="max-w-4xl px-4 py-10 sm:px-6 lg:px-8 mx-auto">
    <!-- Card -->
    <div class="bg-white rounded-xl shadow p-4 sm:p-7">
      <h2 class="text-2xl font-bold mb-4">Notifications</h2>
      
      <div class="space-y-4" id="notification-list">
        <% if (notifications.length > 0) { %>
          <% notifications.forEach(notification => { %>
            <div class="border rounded p-4">
              <h3 class="text-lg font-semibold"><%= notification.title %></h3>
              <p><%= notification.message %></p>
              <a href="<%= notification.href %>" class="text-blue-500">Read more</a>
              <p class="text-gray-500 text-sm"><%= notification.tanggal %></p>
            </div>
          <% }) %>
        <% } else { %>
          <p>No notifications found.</p>
        <% } %>
      </div>
    </div>
    <!-- End Card -->
  </div>
  <!-- End Card Section -->
</div>

<!-- Add external or internal JS scripts here -->
<script src="https://cdn.socket.io/4.0.1/socket.io.min.js"></script>
<script src="preline/preline.js"></script>
<script>
  const socket = io();

  socket.on('connect', () => {
    console.log('Connected to server');
  });

  socket.on('<%= nim %>', (data) => {
    const notificationList = document.getElementById('notification-list');
    const newNotification = document.createElement('div');
    newNotification.classList.add('border', 'rounded', 'p-4');
    newNotification.innerHTML = `
      <h3 class="text-lg font-semibold">${data.message}</h3>
      <p>${data.permintaan.isi}</p>
      <a href="${data.permintaan.href}" class="text-blue-500">Read more</a>
      <p class="text-gray-500 text-sm">${new Date().toLocaleString()}</p>
    `;
    notificationList.prepend(newNotification);
  });
</script>
</body>
</html>
